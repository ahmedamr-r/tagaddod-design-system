{
  "name": "@tagaddod-design/tokens",
  "version": "0.2.2",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "style": "dist/css/tokens.css",
  "files": [
    "dist",
    "!dist/**/*.map"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./css": "./dist/css/tokens.css",
    "./scss": "./dist/scss/_tokens.scss",
    "./tokens": "./dist/tokens.js",
    "./css/tokens.css": "./dist/css/tokens.css",
    "./tagaddod/vars.css": "./dist/tagaddod/vars.css",
    "./greenpan/vars.css": "./dist/greenpan/vars.css",
    "./tagaddod/ltr/vars.css": "./dist/tagaddod/ltr/vars.css",
    "./tagaddod/rtl/vars.css": "./dist/tagaddod/rtl/vars.css",
    "./greenpan/ltr/vars.css": "./dist/greenpan/ltr/vars.css",
    "./greenpan/rtl/vars.css": "./dist/greenpan/rtl/vars.css",
    "./tagaddod/en/vars.css": "./dist/tagaddod/en/vars.css",
    "./tagaddod/ar/vars.css": "./dist/tagaddod/ar/vars.css",
    "./greenpan/en/vars.css": "./dist/greenpan/en/vars.css",
    "./greenpan/ar/vars.css": "./dist/greenpan/ar/vars.css",
    "./locales/en/vars.css": "./dist/locales/en/vars.css",
    "./locales/ar/vars.css": "./dist/locales/ar/vars.css"
  },
  "scripts": {
    "build": "yarn clean && style-dictionary build && node sd.config.mjs",
    "build:brands": "node sd.config.mjs",
    "watch": "chokidar 'src/**/*.json' -c 'yarn build'",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@tokens-studio/sd-transforms": "^1.3.0",
    "@types/node": "^22.15.17",
    "chokidar-cli": "^3.0.0",
    "style-dictionary": "^4.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}
