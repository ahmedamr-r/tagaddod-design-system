{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@tagaddod/react": ["../react/src"],
      "@tagaddod/tokens": ["../tokens/dist"]
    }
  },
  "include": ["src/**/*", ".storybook/**/*"],
  "exclude": ["node_modules", ".storybook-static"]
}
