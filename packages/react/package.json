{
  "name": "@tagaddod-design/react",
  "version": "0.0.3",
  "description": "Tagaddod Design System React Component Library",
  "license": "MIT",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "style": "dist/react.css",
  "files": [
    "dist",
    "!dist/**/*.map"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    },
    "./styles.css": "./dist/react.css",
    "./components.css": "./dist/react.css",
    "./styles/index.css": "./dist/styles/index.css",
    "./all.css": "./dist/tagaddod-design-system.css"
  },
  "scripts": {
    "prebuild": "yarn clean",
    "build": "vite build && yarn build:types && yarn build:css",
    "build:types": "node scripts/consolidated-types-utility.js",
    "build:css": "node scripts/consolidated-css-utility.js build",
    "postbuild": "echo 'Build complete with integrated tokens'",
    "dev": "vite",
    "watch": "concurrently -n 'vite,css' -c 'yellow,green' 'vite build --watch' 'yarn watch:css'",
    "watch:css": "node scripts/consolidated-css-utility.js watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:index-coverage": "jest --coverage --collectCoverageFrom='**/index.ts'"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.9",
    "@radix-ui/react-checkbox": "^1.3.1",
    "@radix-ui/react-form": "^0.1.6",
    "@radix-ui/react-popover": "^1.1.13",
    "@radix-ui/react-radio-group": "^1.3.6",
    "@radix-ui/react-switch": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.11",
    "@tabler/icons-react": "^3.33.0",
    "@tanstack/react-table": "8",
    "clsx": "^2.1.1"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@vitejs/plugin-react": "^4.4.1",
    "babel-jest": "^29.7.0",
    "concurrently": "^9.1.2",
    "i18next": "^25.1.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.3",
    "postcss-import": "^16.1.0",
    "postcss-nested": "^7.0.2",
    "postcss-nesting": "^13.0.1",
    "postcss-preset-env": "^10.1.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.5.1",
    "rollup-plugin-dts": "^6.2.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-css-injected-by-js": "^3.5.2"
  }
}