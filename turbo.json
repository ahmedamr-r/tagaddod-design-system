{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "tsconfig.json"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx,css}",
        "package.json",
        "tsconfig.json",
        "vite.config.ts",
        "postcss.config.cjs"
      ],
      "outputs": [
        "dist/**",
        ".turbo/**"
      ],
      "cache": true,
      "env": ["NODE_ENV"]
    },
    "build:tokens": {
      "inputs": [
        "src/**/*.json",
        "style-dictionary.config.js",
        "package.json"
      ],
      "outputs": ["dist/**"],
      "cache": true
    },
    "lint": {
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        ".eslintrc.*",
        "package.json"
      ],
      "outputs": [],
      "cache": true
    },
    "test": {
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "**/*.test.{ts,tsx,js,jsx}",
        "jest.config.js",
        "jest.setup.js"
      ],
      "outputs": ["coverage/**"],
      "cache": true,
      "env": ["CI"]
    },
    "type-check": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{ts,tsx}",
        "tsconfig.json"
      ],
      "outputs": ["*.tsbuildinfo"],
      "cache": true
    },
    "storybook": {
      "dependsOn": ["^build"],
      "outputs": [".storybook-static/**"],
      "cache": false,
      "persistent": true
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx,css}",
        ".storybook/**"
      ],
      "outputs": ["storybook-static/**"],
      "cache": true
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "watch": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": ["NODE_ENV", "CI"],
  "globalPassThroughEnv": ["VERCEL_URL"]
}
