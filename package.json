{
  "name": "tagaddod-design-system",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "author": "ahmedamr-r <ahmedamr6416@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:tokens": "turbo run watch --filter=@tagaddod-design/tokens",
    "dev:react": "turbo run dev --filter=@tagaddod-design/react",
    "dev:storybook": "turbo run storybook --filter=@tagaddod-design/storybook",
    "dev:docs": "turbo run dev --filter=@tagaddod-design/docs-app",
    "build": "turbo run build",
    "build:tokens": "turbo run build --filter=@tagaddod-design/tokens",
    "build:react": "turbo run build --filter=@tagaddod-design/react",
    "build:storybook": "turbo run build-storybook",
    "build:docs": "turbo run build --filter=@tagaddod-design/docs-app",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean --parallel",
    "clean:cache": "rm -rf node_modules/.cache .turbo",
    "clean:all": "yarn clean && yarn clean:cache && rm -rf node_modules **/node_modules",
    "release": "changeset version && turbo run build && changeset publish",
    "changeset": "changeset",
    "test:build": "node scripts/test-optimized-build.js"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@storybook/react-vite": "9.1.6",
    "turbo": "^2.5.3"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "resolutions": {
    "@storybook/addon-essentials": "8.6.12",
    "@storybook/addon-interactions": "8.6.12",
    "@storybook/addon-onboarding": "8.6.12",
    "@storybook/blocks": "8.6.12",
    "@storybook/components": "8.6.12",
    "@storybook/core": "8.6.12",
    "@storybook/core-events": "8.6.12",
    "@storybook/manager-api": "8.6.12",
    "@storybook/preview-api": "8.6.12",
    "@storybook/react": "8.6.12",
    "@storybook/react-vite": "8.6.12",
    "@storybook/test": "8.6.12",
    "@storybook/theming": "8.6.12",
    "@storybook/types": "8.6.12",
    "storybook": "8.6.12"
  },
  "dependencies": {
    "clsx": "^2.1.1"
  }
}
